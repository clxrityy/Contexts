{
    "manifest_version": 3,
    "name": "Contexts",
    "version": "1.0.0",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "scripting",
        "tabs",
        "storage",
        "activeTab",
        "contextMenus"
    ],
    "host_permissions": [
        "https://www.setgame.com/set/puzzle"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "service/worker/index.js",
        "type": "module"
    }
}